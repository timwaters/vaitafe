
<script>
    document.addEventListener('turbo:load', () => {
      var tipscheckbox = document.getElementById("tipscookie");
      if (tipscheckbox){

    
      if(readCookie("tips") === "hide"){
        tipscheckbox.checked = false;
      }else {
        tipscheckbox.checked = true;
      }

      tipscheckbox.addEventListener("click", () => {
        if (!tipscheckbox.checked){
          createCookie('tips', 'hide', 30);
        }else{
          eraseCookie('tips');
        }
      })
    };
    });
</script>


<main>
  <section class="container column is-one-quarter  ">

<h2 class="title is-3">Edit <%= resource_name.to_s.humanize %></h2>

<div class="block">
  <input type="checkbox" id="tipscookie" name="tipscookie" class="switch">
  <label for="tipscookie">Show tips</label>


</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, class: "label" %>
    <p class="help">A display name others can see</p>
    <div class="control has-icons-left">
      <%= f.text_field :username, autocomplete: "nickname" , class:"input" %>
      <span class="icon is-small is-left">  <i class="fas fa-user"></i> </span>
    </div>
  </div>


  <div class="field">
    <%= f.label :password, "New Password", class: "label" %>
    <p class="help">New Password (<%= @minimum_password_length %> characters minimum) Leave blank for no change</p>
    <div class="control has-icons-left">
      <%= f.password_field :password, autocomplete: "new-password" , autocomplete: "new-password" , class:"input" %>
      <span class="icon is-small is-left"><i class="fas fa-lock"></i> </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm New Password", class: "label" %>
    <p class="help">Confirm new password again</p>
    <div class="control has-icons-left">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"input" %>
      <span class="icon is-small is-left"><i class="fas fa-lock"></i> </span>
    </div>
  </div>
  
  <div class="field">
    <%= f.label :current_password, class: "label" %> 
    <p class="help">(we need your current password to confirm your changes)</p>
    <div class="control has-icons-left">
      <%= f.password_field :current_password, autocomplete: "current-password", class:"input"  %>
      <span class="icon is-small is-left"><i class="fas fa-lock"></i> </span>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'button is-primary' %>
  </div>
<% end %>
<div class="box">
<h3 class="title is-5">Delete my account</h3>

  <div>Delete your user account and all your data? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
  </div>

</div>
<%= link_to "Back", :back %>
</section>

</main>