<main>
  <section class="container column is-one-quarter  ">

  <h2 class="title is-3">Log in</h2>

  <%= form_for( resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "new-password" , autocomplete: "email" , class:"input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class:"checkbox" %>
        <%= f.label :remember_me, class: "checkbox" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" , class: 'button is-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>


</section>
</main>
